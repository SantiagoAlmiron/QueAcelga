<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: false, :placeholder => "Nombre" %>
    <%= f.input :last_name, label: false, :placeholder => "Apellido" %>
    <%= f.input :direction, label: false, :placeholder => "Dirección" %>
    <%= f.input :phone_number, label: false, :placeholder => "+54 2364 12131415" %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: false,
                :placeholder => "email@hotmail.com"%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: false,
                :placeholder => "Contraseña"%>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: false,
                :placeholder => "confirmación de contraseña"%>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
