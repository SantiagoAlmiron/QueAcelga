<div class="container session-card p-4 mt-3">
  <div class="d-flex justify-content-center">
    <%= image_tag 'new_session.jpeg', class: "session-img mt-4" %>
  </div>
  <h2 class="text-white text-center pt-4 mb-4">¡Bienvenido!</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: "TuEmail@email.com",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Contraseña",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center button-2">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <div class="d-flex justify-content-between p-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
