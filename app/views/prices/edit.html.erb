<h1>Precios</h1>
<%= simple_form_for [@price] do |f| %>
    <%= f.input :price_4, label: false, placeholder: "#{@price.price_4}" %>
    <%= f.input :price_8, label: false, placeholder: "#{@price.price_8}" %>
    <%= f.input :price_12, label: false, placeholder: "#{@price.price_12}" %>
    <%= f.submit %>
<% end %>